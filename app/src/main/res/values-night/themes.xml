<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PadTaniApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/green_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:label">false</item>
        <item name="android:statusBarColor">@color/white_200</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Splashscreen    -->
    <style name="NoBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/green_700</item>
    </style>
    <style name="NavBar" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/green_700</item>
        <item name="android:statusBarColor">@color/white_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
    </style>
    <!-- tab layout-->
    <style name="CustomTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor"></item>
    </style>
    <!--Rounded Image-->
    <style name="RoundImgView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="color">@color/white</item>
    </style>
    <!--    Button-->
    <style name="ButtonCustom" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/white_200</item>
        <item name="colorPrimary">@color/green_500</item>
    </style>
</resources>